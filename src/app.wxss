/**app.wxss**/
@import 'style/weui.wxss';

page {
  background: #f8f8f8;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  box-sizing: border-box;
} 

.weui-input {
  min-height: 3em;
  line-height: 3em;
  flex: 1;
}

.weui-cell__bd {
  display: flex;
  align-items: center;
  white-space: nowrap;
}

.text-center {
  text-align: center;
}

.ellipsis {
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}